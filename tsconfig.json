{
    "compilerOptions": {
        "strict": true,
        "module": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "esnext",
        "jsx": "react",
        "declaration": true,
        "allowJs": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "lib": [
            "es6",
            "dom"
        ]
    },
    "include": [
        "packages/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/dist/**/*"
    ]
}